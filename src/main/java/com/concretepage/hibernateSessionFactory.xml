        <mapping resource="com/concretepage/entity/Asset.hbm.xml"/>
        <mapping class="com.concretepage.entity.Availability"/>
        <mapping resource="com/concretepage/entity/Availability.hbm.xml"/>
        <mapping class="com.concretepage.entity.Booking"/>
        <mapping resource="com/concretepage/entity/Booking.hbm.xml"/>
        <mapping class="com.concretepage.entity.Estates"/>
        <mapping resource="com/concretepage/entity/Estates.hbm.xml"/>
        <mapping resource="com/concretepage/entity/Reviews.hbm.xml"/>
        <mapping class="com.concretepage.entity.Reviews"/>
        <mapping class="com.concretepage.entity.Usergroup"/>
        <mapping resource="com/concretepage/entity/Usergroup.hbm.xml"/>
        <mapping class="com.concretepage.entity.User"/>
        <mapping resource="com/concretepage/entity/User.hbm.xml"/>
        <mapping class="com.concretepage.entity.Availability"/>
        <!-- <property name="connection.username"/> -->
        <!-- <property name="connection.password"/> -->

        <!-- DB schema will be updated if needed -->
